<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- 메인 화면 tiles 적용 -->
	<definition name="home.*" template="/WEB-INF/views/home.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/home.jsp" />
	</definition>
	
	<!-- 게시판 글 작성 화면 tiles 적용 -->
	<definition name="writeView.*" template="/WEB-INF/views/writeView.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/writeView.jsp" />
	</definition>
	
	<!-- 로그인 화면 tiles 적용 -->
	<definition name="login.*" template="/WEB-INF/views/login.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/login.jsp" />
	</definition>
	
</tiles-definitions>